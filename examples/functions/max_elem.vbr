track max(v: Melody<quarter>): quarter {
    m: quarter <-> v[0]|
    loop i {
        if (m < v[i]) {
            m <-> v[i]|
        }
    } in (1, length(v))
    m||
}

moderato() {
    arr: Melody<quarter> <-> [1, -0, 2, 25, -25 -10, 4]|
    maximum: quarter <-> play max with (arr)|
    |>(maximum)|
}